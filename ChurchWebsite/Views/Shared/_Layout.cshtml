<!DOCTYPE html>
<html class="no-js">
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - NTCG(LEEDS)</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black" />
        @RenderSection("metadata", required: false)
        <link rel="stylesheet" media="only screen and (min-width: 1047px)" href="~/Content/Site.css">
        <link rel="stylesheet" media="only screen and (max-width: 1047px)" href="~/Content/SiteMobile.css">
        <link rel="stylesheet" media="only screen and (max-width: 1047px)" href="~/Content/slicknav.css" />
         @RenderSection("styles", required: false)
    </head>
    <body>
        <div class="siteWrapper">
            <div class="outerContentWrapper" id="outerContentWrapper">
                <div class="innerContentWrapper">
                    <div class="fakeHeader"></div>
                    <header class="Header">
                        <div class="content-wrapper">
                            <div class="float-left">
                                <img src="../../Content/images/coglogo38x45.gif" alt="New Testament Church of God Logo" class="ntcglogo">
                                <p class="site-title">NEW TESTAMENT CHURCH OF GOD (LEEDS)</p>
                            </div>
                            <div class="float-right">
                                <section id="login">
                                    @Html.Partial("_LoginPartial")
                                </section>
                            </div>
                            <!--<div
                                class="fb-like"
                                data-share="true"
                                data-width="450"
                                data-show-faces="true">
                            </div>-->
                            <div class="navigation-tom">
                                <nav>
                                    @Html.MvcSiteMap().Menu()
                                </nav>
                                <div id="subNavContainer">
                                </div>
                            </div>
                        </div>
                    </header>
                    <div id="body">
                        @RenderSection("featured", required: false)
                        <section class="content-wrapper main-content clear-fix">
                            @RenderBody()
                        </section>
                    </div>                   
                    <footer>
                        <div class="content-wrapper">
                            <div class="footer-nav-container">
                                <nav>
                                    <a href="./">HOME</a>
                                    <a href="./About">ABOUT US</a>
                                    <a href="./Visiting">VISITING</a>
                                    <a href="./Youth">YOUTH</a>
                                    <a href="./WorkingChurch">WORKING CHURCH</a>
                                    <a href="./Media">SERMONS/MEDIA</a>
                                </nav>
                            </div>
                            <div class="address-container">
                                <p>New Testament Church of God</p>
                                <p>3 Easterly Road</p>
                                <p>Harehills</p>
                                <p>Leeds</p>
                                <p>LS8 2TN</p>
                                <p>
                                    <a href="https://www.facebook.com/leedsntcg"><img src="~/Content/images/facebook_icon_footer.png" /><span> https://www.facebook.com/leedsntcg</span></a>
                                </p>
                            </div>
                            <div class="mail-tel-container">
                                <p>Mail:leedsntcg@gmail.com</p>
                                <p>Tel:0113 240 6561</p>
                                <div></div>
                                <p>
                                    <a href="https://twitter.com/bishopparry"><img src="~/Content/images/twitter_icon_footer.png" /><span> https://twitter.com/bishopparry</span></a>
                                </p>
                            </div>
                        </div>
                    </footer>
                    @Scripts.Render("~/bundles/modernizr")
                    @Scripts.Render("~/bundles/jquery")
                    @Scripts.Render("~/bundles/jqueryval")
                    @Scripts.Render("~/bundles/jqueryui")
                    @Scripts.Render("~/bundles/knockout")
                    <!-- This is the responsive navigation -->
                    <script src="~/Scripts/MyMainScripts/NavScript.js" type="text/javascript"></script>
                    <script src="~/Scripts/jquery.slicknav.js"></script>
                    <script>
                        window.fbAsyncInit = function () {
                            FB.init({
                                appId: '895378180550460',
                                xfbml: true,
                                version: 'v2.4'
                            });
                        };

                        (function (d, s, id) {
                            var js, fjs = d.getElementsByTagName(s)[0];
                            if (d.getElementById(id)) { return; }
                            js = d.createElement(s); js.id = id;
                            js.src = "//connect.facebook.net/en_US/sdk.js";
                            fjs.parentNode.insertBefore(js, fjs);
                        }(document, 'script', 'facebook-jssdk'));
                    </script>
                    @RenderSection("scripts", required: false)
                </div>
            </div>
        </div>
    </body>
</html>
